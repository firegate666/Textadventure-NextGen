<?xml version="1.0" encoding="UTF-8"?>
<phpdox xmlns="http://phpdox.de/config">

	<project name="Textadventure-NextGen" source="protected" workdir="build/phpdox">

		<collector publiconly="false">
			<include mask="*.php" />
			<exclude mask="**/protected/vendors/**" />
			<exclude mask="**/protected/tests/**" />
		</collector>

		<generator output="build">
			<build engine="html" enabled="true" output="api" />
			<build engine="todo" enabled="true" output="phpdox-todo">
				<file name="todolist.txt" encoding="utf-8" />
			</build>
		</generator>

	</project>

</phpdox>
