<phpunit bootstrap="bootstrap.php"
		colors="false"
		convertErrorsToExceptions="true"
		convertNoticesToExceptions="true"
		convertWarningsToExceptions="true"
		stopOnFailure="false">

	<selenium>
		<browser name="Internet Explorer" browser="*iexplore" />
		<browser name="Firefox" browser="*firefox" />
	</selenium>

	<filter>
		<blacklist>
			<directory suffix=".php">/var/lib/jenkins/public_html/TextAdventure-NextGen/protected/vendors</directory>
			<directory suffix=".php">/var/lib/jenkins/public_html/TextAdventure-NextGen/protected/tests</directory>
		</blacklist>
	</filter>

</phpunit>
